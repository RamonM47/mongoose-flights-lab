<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/movies/index.css">
<%- include('../partials/nav')  %>


<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% movies.forEach((movie) => { %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.releaseYear %></td>
        <td><a href="/movies/<%= movie._id %>">DETAILS</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>


<%- include('../partials/footer')  %> 